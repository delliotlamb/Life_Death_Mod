                <Expression><![CDATA[[UnitOwner_GetNumAirShards] + [UnitStat_BonusSummonLevel]]]></Expression>
            </Calculate>
            <Calculate InternalName="Value">
                <Expression><![CDATA[[Calc] + 13]]></Expression>
            </Calculate>
        </GameModifier>
